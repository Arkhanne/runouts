<section class="profile-container">
    <img src="/images/profile.png" alt="" class="profile-img">
  <section class="profile-header">
    <h2>{{ user.username }}</h2>
    <p>{{ user.email }}</p>
  <div class="profile-groups-title-container">
    <h4>My Groups</h4>
    <a href="/groups/add" class="btn btn-success button-add" role="button" aria-pressed="true">+</a>
  
  </div>
  <ul>
    {{#each groups}}
      <div class="profile-card">
        <div class="profile-card-body">
          <h4><a class="profile-card-title" href="/groups/{{ this._id }}">{{ this.name }}</a></h4>
        </div>
      </div>
    {{/each}}
  </ul>
  </section>
</section>




