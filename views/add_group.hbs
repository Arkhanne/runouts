<div class="list-title">  
  <h2>Create a group</h2>
</div>

<form method="POST" action="/groups/add" class="form-addgroup">
  <label class="form-inputs">Name: </label>
  <input class="field form-control" type="text" name="name" placeholder="Crazy Runners"/>

  <label class="form-inputs">Day: </label>
  <input class="field form-control" type="text" name="day" placeholder="Monday"/>

  <label class="form-inputs">Hour: </label>
  <input class="field form-control" type="text" name="hour" placeholder="17:30"/> 
  
  <label class="form-inputs">Place: </label>
  <input class="field form-control" type="text" name="place" placeholder="Ironhack"/> 

  <label class="form-inputs">Description: </label>
  <input class="field form-control" type="text" name="description" /> 

  {{ message }}

  <div class="field submit div-addgroup">
    <button type="submit" class="btn btn-lg btn-primary btn-block btn-login">Create</button>
  </div>
</form>

  {{#if messages.length}}
    <ul class="validation">
      {{#each messages}}<li>{{this}}</li>{{/each}}
    </ul>
  {{/if}}

</form>