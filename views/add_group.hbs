<h2>Create a group</h2>
<form method="POST" action="/groups/add" class="form-addgroup">
  <label>Name: </label>
  <input class="field form-control" type="text" name="groupname" placeholder="Crazy Runners"/>

  <label>Day: </label>
  <input class="field form-control" type="text" name="day" placeholder="Monday"/>

  <label>Hour: </label>
  <input class="field form-control" type="text" name="hour" placeholder="17:30"/> 
  
  <label>Place: </label>
  <input class="field form-control" type="text" name="place" placeholder="Ironhack"/> 

  <label>Description: </label>
  <input class="field form-control" type="text" name="hour" /> 

  {{ message }}

  <div class="field submit div-addgroup">
    <button type="submit" class="btn btn-lg btn-primary btn-block">Create</button>
  </div>
</form>

  {{#if messages.length}}
    <ul class="validation">
      {{#each messages}}<li>{{this}}</li>{{/each}}
    </ul>
  {{/if}}

</form>