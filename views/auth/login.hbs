<h2>Log in</h2>
<form method="POST" action="/auth/login" class="form-login">
  <div class="field">
    <label>Username</label>
    <input type="text" name="username" />
  </div>
  <div class="field">
    <label>Password</label>
    <input type="password" name="password" />
  </div>
  {{ message }}
  <div class="field submit div-login">
    <button type="submit">Login</button>
  </div>
</form>